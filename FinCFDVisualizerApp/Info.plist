<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Vector 3/2 CFD Visualizer</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	
	<!-- Supported Device Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>accelerometer</string>
		<string>gyroscope</string>
		<string>magnetometer</string>
		<string>bluetooth-le</string>
	</array>
	
	<!-- Privacy Usage Descriptions -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app uses Bluetooth to connect to pressure sensors on the surfboard fins for real-time hydrodynamic data collection.</string>
	
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app uses Bluetooth to connect to pressure sensors on the surfboard fins for real-time hydrodynamic data collection.</string>
	
	<key>NSHealthShareUsageDescription</key>
	<string>This app accesses your heart rate variability (HRV) data to analyze your flow state and optimize surfing performance. This data helps correlate your physiological state with hydrodynamic performance.</string>
	
	<key>NSHealthUpdateUsageDescription</key>
	<string>This app may write workout and session data to HealthKit to track your surfing sessions and performance metrics.</string>
	
	<key>NSMotionUsageDescription</key>
	<string>This app uses motion sensors (accelerometer, gyroscope) to detect surfboard orientation and calculate angle of attack for CFD analysis.</string>
	
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app uses location data to determine water conditions and environmental factors that affect fin performance analysis.</string>
	
	<key>NSCameraUsageDescription</key>
	<string>This app may use the camera to capture surfing sessions for performance analysis (optional feature).</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>bluetooth-peripheral</string>
		<string>background-processing</string>
		<string>location</string>
	</array>
	
	<!-- Scene Configuration -->
	<key>UISceneDelegate</key>
	<string>SceneDelegate</string>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
	
	<!-- Launch Screen -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>AccentColor</string>
		<key>UIImageName</key>
		<string>LaunchImage</string>
	</dict>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Metal Performance -->
	<key>MTLCaptureEnabled</key>
	<true/>
	
	<!-- Core ML -->
	<key>NSSupportsLiveActivities</key>
	<true/>
	
	<!-- 3D Graphics -->
	<key>UIRequiresFullScreen</key>
	<false/>
	
	<!-- File Sharing -->
	<key>UIFileSharingEnabled</key>
	<true/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>
	
	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>17.0</string>
	
	<!-- Supported Platforms -->
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>iPhoneOS</string>
		<string>MacCatalyst</string>
	</array>
	
	<!-- App Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.sports</string>
	
	<!-- Document Types -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>CFD Data</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.json</string>
				<string>public.comma-separated-values-text</string>
			</array>
		</dict>
	</array>
	
	<!-- URL Schemes -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.fincfd.visualizer</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>fincfd</string>
			</array>
		</dict>
	</array>
	
	<!-- Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>accelerometer</string>
		<string>gyroscope</string>
		<string>magnetometer</string>
		<string>bluetooth-le</string>
		<string>metal</string>
		<string>arm64</string>
	</array>
	
	<!-- Status Bar -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>
	
	<!-- Interface Style -->
	<key>UIUserInterfaceStyle</key>
	<string>Automatic</string>
	
	<!-- App Icon -->
	<key>CFBundleIcons</key>
	<dict>
		<key>CFBundlePrimaryIcon</key>
		<dict>
			<key>CFBundleIconFiles</key>
			<array>
				<string>AppIcon</string>
			</array>
			<key>CFBundleIconName</key>
			<string>AppIcon</string>
		</dict>
	</dict>
	
	<!-- Accessibility -->
	<key>UIAccessibilityEnabled</key>
	<true/>
	
	<!-- Performance -->
	<key>UIApplicationSupportsShakeToEdit</key>
	<true/>
	
	<!-- Notifications -->
	<key>UIBackgroundRefreshStatusDidChangeNotification</key>
	<true/>
</dict>
</plist>