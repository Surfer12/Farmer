# HTTPS Configuration for Farmer Assistants
# Copy this to .env and modify as needed

# Enable HTTPS (0=HTTP, 1=HTTPS)
USE_HTTPS=1

# SSL Certificate paths (relative to Farmer root)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# Ports for HTTPS (use 8443/8444 to avoid conflicts with HTTP)
HR_PORT=8443
IT_PORT=8444

# Allow remote connections (0=localhost only, 1=all interfaces)
ALLOW_REMOTE=0

# Authentication
REQUIRE_AUTH=1
AUTH_TOKEN=your-secure-token-here

# Logging
LOG_DIR=data/logs
